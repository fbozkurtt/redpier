@page "/registries/{id}"
@attribute [Authorize]

<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12">
        <form>
            <div class="form-section-title">
                Update registry
            </div>
            <div class="form-group row">
                <label for="name" class="col-lg-1 col-form-label">Name:</label>
                <div class="col-lg-11">
                    <input type="text" class="form-control" id="name" value="@Id" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="url" class="col-lg-1 col-form-label">URL:</label>
                <div class="col-lg-11">
                    <input type="text" class="form-control" id="url" value="0.0.0.0:5000" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-1 col-form-label">Username:</label>
                <div class="col-lg-11">
                    <input type="text" class="form-control" id="username" value="admin">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-1 col-form-label">Password:</label>
                <div class="col-lg-11">
                    <input type="password" class="form-control" id="password">
                </div>
            </div>
            <button type="submit" class="btn btn-primary my-2">Save</button>
        </form>
    </div>
</div>

@code {
    [Parameter]
    public string Id { get; set; }
}