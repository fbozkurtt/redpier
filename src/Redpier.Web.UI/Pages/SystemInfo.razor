@page "/system"
@attribute [Authorize]

<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 table-responsive">
        <table class="table table-sm">
            <thead class="thead-light">
                <tr>
                    <th scope="col" style="width: 30%">System Info</th>
                    <th scope="col" style="width: 70%"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Hostname</td>
                    <td>docker-desktop</td>
                </tr>
                <tr>
                    <td>OS</td>
                    <td>linux x86_64 Docker Desktop</td>
                </tr>
                <tr>
                    <td>Kernel</td>
                    <td>4.19.121-linuxkit</td>
                </tr>
                <tr>
                    <td>
                        <span class="fa fa-microchip"></span>
                        CPU cores
                    </td>
                    <td>2</td>
                </tr>
                <tr>
                    <td>
                        <span class="fa fa-memory"></span>
                        Memory
                    </td>
                    <td>1 GB</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 table-responsive">
        <table class="table table-sm">
            <thead class="thead-light">
                <tr>
                    <th scope="col" style="width: 30%">Docker Info</th>
                    <th scope="col" style="width: 70%"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Version</td>
                    <td>20.10.5</td>
                </tr>
                <tr>
                    <td>Root directory</td>
                    <td>/var/lib/docker</td>
                </tr>
                <tr>
                    <td>Storage Driver</td>
                    <td>overlay2</td>
                </tr>
                <tr>
                    <td>Logging Driver</td>
                    <td>json-file</td>
                </tr>
                <tr>
                    <td>Volume Plugins</td>
                    <td>local</td>
                </tr>
                <tr>
                    <td>Network Plugins</td>
                    <td>bridge, host, ipvlan, macvlan, null, overlay</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
