@page "/containers/add"

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <ul class="nav nav-pills nav-justified flex-column flex-sm-row" role="tablist">
                <li class="nav-item">
                    <a class="flex-sm-fill text-sm-center nav-link active" id="basicTab" data-toggle="tab" href="#basic" role="tab" aria-controls="basic" aria-selected="true">Basic</a>
                </li>
                <li class="nav-item">
                    <a class="flex-sm-fill text-sm-center nav-link" id="profileTab" data-toggle="tab" href="#command" role="tab" aria-controls="command" aria-selected="false">Command</a>
                </li>
                <li class="nav-item">
                    <a class="flex-sm-fill text-sm-center nav-link" id="labelsTab" data-toggle="tab" href="#labels" role="tab" aria-controls="labels" aria-selected="false">Labels</a>
                </li>
                <li class="nav-item">
                    <a class="flex-sm-fill text-sm-center nav-link" id="volumesTab" data-toggle="tab" href="#volumes" role="tab" aria-controls="volumes" aria-selected="false">Volumes</a>
                </li>
                <li class="nav-item">
                    <a class="flex-sm-fill text-sm-center nav-link" id="networkTab" data-toggle="tab" href="#network" role="tab" aria-controls="network" aria-selected="false">Network</a>
                </li>
                <li class="nav-item">
                    <a class="flex-sm-fill text-sm-center nav-link" id="restartPolicyTab" data-toggle="tab" href="#restartPolicy" role="tab" aria-controls="restartPolicy" aria-selected="false">Restart policy</a>
                </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active py-4" id="basic" role="tabpanel" aria-labelledby="basicTab">
                    <form>
                        <div class="form-group row">
                            <label for="name" class="col-sm-1 col-form-label">Name:</label>
                            <div class="col-sm-11">
                                <input type="text" class="form-control" id="name" placeholder="can be anything even nothing">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="image" class="col-sm-1 col-form-label">Image:</label>
                            <div class="col-sm-11">
                                <input type="text" class="form-control" id="image" placeholder="docker/getting-started:latest">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane py-4" id="command" role="tabpanel" aria-labelledby="profileTab">
                    <form>
                        <div class="form-group row">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" value="" id="overrideDefaultCommand">
                                <label class="form-check-label text-wrap" for="overrideDefaultCommand">
                                    Override default command
                                </label>
                            </div>
                            <input type="text" class="form-control" id="command" placeholder="'-logtostderr' '--housekeeping_interval=5s'" disabled>
                        </div>
                        <div class="form-group row">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" value="" id="overrideDefaultEntrypoint">
                                <label class="form-check-label text-wrap" for="overrideDefaultEntrypoint">
                                    Override default entrypoint
                                </label>
                            </div>
                            <input type="text" class="form-control" id="entrypoint" placeholder="/bin/sh -c" disabled>
                        </div>
                        <div class="form-group row">
                            <label for="workingDir" class="col-form-label">Working directory:</label>
                            <input type="text" class="form-control" id="workingDir" placeholder="/app">
                            <label for="user" class="col-form-label">User:</label>
                            <input type="text" class="form-control" id="user" placeholder="root">
                        </div>
                        <div class="form-group row">
                            <label for="console" class="col-form-label pr-3">Console:</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="consoleRadios" id="consoleNone" value="none" checked>
                                <label class="form-check-label" for="consoleNone">
                                    None
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="consoleRadios" id="tty" value="tty">
                                <label class="form-check-label" for="tty">
                                    TTY
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="consoleRadios" id="interactive" value="interactive">
                                <label class="form-check-label" for="interactive">
                                    Interactive
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="consoleRadios" id="ttyInteractive" value="ttyInteractive">
                                <label class="form-check-label" for="ttyInteractive">
                                    TTY & Interactive
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane py-4" id="labels" role="tabpanel" aria-labelledby="labelsTab">
                    <form>
                        <div class="form-group">
                            <a href="#" class="btn-sm btn-success">
                                <span class="fa fa-plus"></span> Add new
                            </a>
                            <div class="row py-1">
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" placeholder="Name">
                                </div>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" placeholder="Value">
                                </div>
                                <a href="#" class="btn-sm btn-outline-danger col-sm-2">
                                    <span class="fa fa-trash"></span> Remove
                                </a>
                            </div>
                            <div class="row py-1">
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" placeholder="Name">
                                </div>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" placeholder="Value">
                                </div>
                                <a href="#" class="btn-sm btn-outline-danger col-sm-2">
                                    <span class="fa fa-trash"></span> Remove
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane py-4" id="volumes" role="tabpanel" aria-labelledby="volumesTab">
                    <form>
                        <div class="form-group">
                            <a href="#" class="btn-sm btn-success">
                                <span class="fa fa-plus"></span> Bind new volume
                            </a>
                            <a href="#" class="btn-sm btn-success mx-2">
                                <span class="fa fa-plus"></span> Add existing volume
                            </a>
                            <div class="row py-1">
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" placeholder="Host path">
                                </div>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" placeholder="Container path">
                                </div>
                                <a href="#" class="btn-sm btn-outline-danger col-sm-2">
                                    <span class="fa fa-trash"></span> Remove
                                </a>
                            </div>
                            <div class="row py-1">
                                <div class="col-sm-5">
                                    <select class="form-control" id="volumeSelect">
                                        <option selected>Select a volume</option>
                                        <option>volume 1</option>
                                        <option>volume 2</option>
                                        <option>volume 3</option>
                                        <option>volume 4</option>
                                        <option>volume 5</option>
                                    </select>
                                </div>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control" placeholder="Name">
                                </div>
                                <a href="#" class="btn-sm btn-outline-danger col-sm-2">
                                    <span class="fa fa-trash"></span> Remove
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane py-4" id="network" role="tabpanel" aria-labelledby="networkTab">
                    <form>
                        <div class="form-group row">
                            <label for="network" class="col-lg-1 col-form-label">Network:</label>
                            <div class="col-lg-11">
                                <select class="form-control" id="network">
                                    <option selected>bridge</option>
                                    <option>Network 1</option>
                                    <option>Network 2</option>
                                    <option>Network 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="hostName" class="col-lg-1 col-form-label">Hostname:</label>
                            <div class="col-lg-11">
                                <input type="text" class="form-control" id="hostName" placeholder="hostname">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="domainName" class="col-lg-1 col-form-label">Domain Name:</label>
                            <div class="col-lg-11">
                                <input type="text" class="form-control" id="domainName" placeholder="somedomain.com">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="macAddress" class="col-lg-1 col-form-label">Mac Address:</label>
                            <div class="col-lg-11">
                                <input type="text" class="form-control" id="macAddress" placeholder="12:34:ab:cd:ef:56">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="ipv4" class="col-lg-1 col-form-label">IPv4 Address:</label>
                            <div class="col-lg-11">
                                <input type="text" class="form-control" id="ipv4" placeholder="175.15.15.20">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="ipv6" class="col-lg-1 col-form-label">IPv6 Address:</label>
                            <div class="col-lg-11">
                                <input type="text" class="form-control" id="ipv6" placeholder="fe80::5461:1c36:e4a1:be7c%23">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="primaryDNS" class="col-lg-1 col-form-label">1st DNS:</label>
                            <div class="col-lg-11">
                                <input type="text" class="form-control" id="primaryDNS" placeholder="8.8.8.8">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="secondaryDNS" class="col-lg-1 col-form-label">2nd DNS:</label>
                            <div class="col-lg-11">
                                <input type="text" class="form-control" id="secondaryDNS" placeholder="8.8.4.4">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab-pane py-4" id="restartPolicy" role="tabpanel" aria-labelledby="restartPolicyTab">...</div>
            </div>
            <a href="#" class="btn btn-primary">Deploy container</a>
        </div>
    </div>
