@page "/networks"
@attribute [Authorize]

<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12">
        <div class="btn-group">
            <button type="button" class="btn btn-sm btn-danger">
                <span class="fa fa-times-circle"></span> Remove
            </button>
        </div>
        <a class="btn btn-sm btn-success float-right" href="/networks/add">
            <span class="fa fa-plus"></span> Add network
        </a>

        <div class="table-responsive py-2">
            <table class="table table-sm table-hover">
                <thead class="thead-light">
                    <tr>
                        <th><input type="checkbox" /></th>
                        <th scope="col">Name</th>
                        <th scope="col">Stack</th>
                        <th scope="col">Driver</th>
                        <th scope="col">IPV4 IPAM Subnet</th>
                        <th scope="col">IPV4 IPAM Gateway</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox" disabled /></td>
                        <td><a href="/networks/bridge">bridge</a></td>
                        <td>-</td>
                        <td>bridge</td>
                        <td>172.17.0.0/16</td>
                        <td>172.17.0.1</td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" disabled /></td>
                        <td><a href="/networks/docker_gwbridge">docker_gwbridge</a></td>
                        <td>-</td>
                        <td>bridge</td>
                        <td>172.18.0.0/16</td>
                        <td>172.18.0.1</td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" disabled /></td>
                        <td><a href="/networks/host">host</a></td>
                        <td>-</td>
                        <td>host</td>
                        <td>-</td>
                        <td>-</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
