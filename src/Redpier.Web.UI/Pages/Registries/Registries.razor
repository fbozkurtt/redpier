@page "/registries"
@attribute [Authorize]

<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12">
        <div class="btn-group">
            <button type="button" class="btn btn-sm btn-danger">
                <span class="fa fa-times-circle"></span> Remove
            </button>
        </div>
        <a class="btn btn-sm btn-success float-right" href="/registries/add">
            <span class="fa fa-plus"></span> Add registry
        </a>
        <div class="table-responsive py-2">
            <table class="table table-sm table-hover">
                <thead class="thead-light">
                    <tr>
                        <th colspan="3">Registries</th>
                    </tr>
                </thead>
                <thead>
                    <tr>
                        <th><input type="checkbox" /></th>
                        <th scope="col">Name</th>
                        <th scope="col">URL</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="checkbox" disabled /></td>
                        <td><a href="/registries/dockerhub">DockerHub</a></td>
                        <td>https://docker.io</td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" /></td>
                        <td><a href="/registries/MyHub1">MyHub1</a></td>
                        <td>0.0.0.0:5000</td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" /></td>
                        <td><a href="/registries/MyHub2">MyHub2</a></td>
                        <td>0.0.0.0:5001</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <nav aria-label="Registries pagination">
            <ul class="pagination justify-content-end">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>